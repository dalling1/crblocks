 citHeader("To cite package 'crblocks' in publications use:")
     
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
     vers <- paste("R package version", meta$Version)
     
     citEntry(entry="Manual",
              title = "crblocks: Categorical Randomized Block Data Analysis",
              author = personList(as.person("David Allingham"),
                                  as.person("D.J. Best")),
              year = year,
              note = vers,
     
              textVersion =
              paste("David Allingham and D.J. Best (",
                    year,
                    "). crblocks: Categorical Randomized Block Data Analysis. ",
                    vers, ".", sep=""))
